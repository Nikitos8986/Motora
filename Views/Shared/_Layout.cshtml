@inject IHttpContextAccessor Account
@{
    var email = Account.HttpContext.Session.GetString("Email");
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Оставьте отзыв | Motora</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">



    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #E3F2FD;
            color: #0D47A1;
            margin: 0;
            padding: 0;
        }

        /* Хедер */
        .header {
            background: linear-gradient(90deg, #0D47A1, #1976D2);
            color: white;
            padding: 15px 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 0 0 10px 10px;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        /* Новый фиксированный хедер */
        .headerv2 {
            background: linear-gradient(90deg, #0D47A1, #1976D2);
            color: white;
            position: sticky;
            top: 0;
            z-index: 1000;
            padding: 5px 0;
            width: 65.3%; /* Ограничиваем ширину хедера */
            margin: 0 auto; /* Центрируем хедер */
        }

            .headerv2 nav {
                display: flex;
                justify-content: center;
                align-items: center;
                gap: 20px;
                width: 100%; /* Занимает всю ширину хедера */
                margin: 0 auto;
            }

                .headerv2 nav a {
                    color: white;
                    text-decoration: none;
                    font-size: 1.1rem;
                    padding: 8px 20px;
                    border-radius: 5px;
                    transition: all 0.3s ease;
                }

                    .headerv2 nav a:hover {
                        background-color: rgba(255, 255, 255, 0.2);
                        transform: scale(1.05);
                    }


        /* Логотип */
        .logo-container {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .logo-img {
            height: 60px;
            width: auto;
        }

        .logo {
            font-size: 26px;
            font-weight: bold;
            text-transform: uppercase;
            color: white;
            text-decoration: none;
            transition: transform 0.3s ease-in-out;
        }

            .logo:hover {
                transform: scale(1.1);
            }

        .nav {
            display: flex;
            gap: 20px;
        }

            .nav a {
                color: white;
                font-size: 16px;
                text-decoration: none;
                padding: 10px 18px;
                border-radius: 6px;
                transition: 0.3s ease;
                position: relative;
            }

                .nav a:hover {
                    background: rgba(255, 255, 255, 0.2);
                    transform: scale(1.1) rotate(5deg);
                    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
                }

        .footer {
            background: linear-gradient(90deg, #0D47A1, #1976D2);
            color: white;
            padding: 20px;
            text-align: center;
            box-shadow: 0 -4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px 10px 0 0;
        }

            .footer h5 {
                font-size: 18px;
                font-weight: bold;
            }

            .footer p {
                margin: 5px 0;
            }

        /* Кнопки */
        .btn-primary {
            background: linear-gradient(90deg, #1976D2, #42A5F5);
            border: none;
            padding: 12px 24px;
            font-size: 18px;
            transition: all 0.3s ease-in-out;
            border-radius: 8px;
            position: relative;
            overflow: hidden;
        }

            .btn-primary:hover {
                background: rgba(255, 255, 255, 0.2);
                transform: scale(1.1) rotate(5deg);
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            }

            .btn-primary:active {
                transform: scale(0.95);
                background: linear-gradient(90deg, #1565C0, #2196F3);
                transition: all 0.1s;
            }
        .dropdown {
            position: relative;
            display: inline-block;
            cursor: pointer;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background: linear-gradient(90deg, #1565C0, #2196F3);
            min-width: 190px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            border-radius: 5px;
            z-index: 1;
        }

            .dropdown-content a {
                color: black;
                padding: 10px;
                text-decoration: none;
                display: block;
            }

                .dropdown-content a:hover {
                    background-color: #f1f1f1;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }
    </style>
</head>
<body>
    <header>
        <div class="header">
            <div class="logo-container">
                <a href="/" class="logo">
                    <img src="/images/Motora.png" alt="Motora Logo" class="logo-img">
                </a>
            </div>

            <div class="user-panel">
                @if (email == null)
                {
                    <a href="/profile/login" class="btn-primary" style="text-decoration:none">
                        <i class="bi bi-person"></i> Войти
                    </a>
                }
                else
                {
                    <a href="#" class="btn-primary" style="text-decoration: none;"><i class="bi bi-person-circle" style="text-decoration: none;"></i> Профиль </a>
                }
            </div>
        </div>
    </header>

    <!-- Новый хедер -->
    <header class="headerv2">
        <nav>
            <a href="/">Главная</a>
            @if (email == null)
            {
                <div class="dropdown">
                    <a>Отзывы <i class="fa-solid fa-chevron-down"></i></a>
                    <div class="dropdown-content">
                        <a href="/profile/login">Оставить отзыв</a>
                        <a href="/discussion/allreviews">Все отзывы</a>
                    </div>
                </div>
                <div class="dropdown">
                    <a>Оценки <i class="fa-solid fa-chevron-down"></i></a>
                    <div class="dropdown-content">
                        <a href="/profile/login">Поставить оценку</a>
                        <a href="/discussion/allestimation">Все оценки</a>
                    </div>
                </div>
            }
            else
            {
                <div class="dropdown">
                    <a>Отзывы <i class="fa-solid fa-chevron-down"></i></a>
                    <div class="dropdown-content">
                        <a href="/discussion/reviews">Оставить отзыв</a>
                        <a href="/discussion/allreviews">Все отзывы</a>
                    </div>
                </div>
                <div class="dropdown">
                    <a>Оценки <i class="fa-solid fa-chevron-down"></i></a>
                    <div class="dropdown-content">
                        <a href="/discussion/estimation">Поставить оценку</a>
                        <a href="/discussion/allestimation">Все оценки</a>
                    </div>
                </div>
            }
            <a href="#" data-bs-toggle="modal" data-bs-target="#contactModal">Контакты</a>
        </nav>
    </header>

    <!-- Модальное окно с контактами -->
    <div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="contactModalLabel">Наши контакты</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                </div>
                <div class="modal-body">
                    <p><i class="bi bi-telephone-fill"></i> Телефон: +7 (123) 456-78-90</p>
                    <p><i class="bi bi-envelope-fill"></i> Email: info@autodealer.ru</p>
                    <p><i class="bi bi-geo-alt-fill"></i> Адрес: Москва, ул. Примерная, 10</p>
                    <p><i class="bi bi-clock-fill"></i> Часы работы: Пн-Пт 9:00 - 19:00, Сб-Вс 10:00 - 17:00</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <h5>Доверие и мнения о продаже авто – Ваша Motora</h5>
            <p>&copy; 2025 Motora. Все права защищены.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
